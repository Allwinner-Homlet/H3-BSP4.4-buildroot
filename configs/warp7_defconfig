# system
BR2_TARGET_GENERIC_GETTY_PORT="ttymxc0"

# rootfs overlay
BR2_ROOTFS_OVERLAY="board/warp7/rootfs_overlay"

# Kernel
BR2_LINUX_KERNEL=y
